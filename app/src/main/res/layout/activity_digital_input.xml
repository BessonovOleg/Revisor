<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="4"
    tools:context="obessonov.com.revisor.Documents.DigitalInputActivity">

    <TextView
        android:layout_gravity="fill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCaptionDigitalInput"
        android:layout_columnSpan="4"
        android:textSize="24sp" />

    <TextView
        android:layout_gravity="fill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDigitResult"
        android:layout_columnSpan="4"
        android:textSize="24sp" />

    <Button
        android:text="1"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDigit1" />

    <Button
        android:text="2"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDigit2" />

    <Button
        android:text="3"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDigit3" />

    <Button
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnDigitDelCaption"
        android:id="@+id/btnDigitDel" />

    <Button
        android:text="4"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDigit4" />

    <Button
        android:text="5"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDigit5" />

    <Button
        android:text="6"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDigit6" />

    <Button
        android:text="OK"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDigitOk"
        android:layout_rowSpan="3"
        android:elevation="1dp" />

    <Button
        android:text="7"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDigit7" />

    <Button
        android:text="8"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDigit8" />

    <Button
        android:text="9"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDigit9" />

    <Button
        android:text="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDigit0" />

    <Button
        android:text="."
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDigitDot" />

</GridLayout>




